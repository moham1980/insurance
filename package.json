{
  "name": "insurance-ai-platform",
  "version": "1.0.0",
  "description": "Enterprise Insurance AI Platform - Single Tenant per Insurer",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "docker compose up -d && bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "kafka:topics:create": "bun run scripts/create-topics.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
