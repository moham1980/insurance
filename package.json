{
  "name": "insurance-ai-platform",
  "version": "1.0.0",
  "description": "Enterprise Insurance AI Platform - Single Tenant per Insurer",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "docker-compose up -d && npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "migration:generate": "cd services/shared && npx typeorm-ts-node-commonjs migration:generate",
    "migration:run": "cd services/shared && npx typeorm-ts-node-commonjs migration:run",
    "kafka:topics:create": "node scripts/create-topics.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
