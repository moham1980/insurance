{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@insurance/shared": ["../../packages/shared"]
    }
  },
  "include": [
    "src/main.ts",
    "src/app.module.ts",
    "src/copilot.controller.ts",
    "src/copilot.service.ts",
    "src/entities/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
